# Domains / certificates
OBS_DOMAIN=observability.example.com
OTLP_DOMAIN=otlp.example.com
LE_EMAIL=you@example.com

# Traefik security
# Create with: htpasswd -nb user StrongPass | sed -e 's/\$/$$/g'
TRAEFIK_BASIC_AUTH=user:$$apr1$$replace_with_hash
# Comma separated CIDRs. Leave blank to disable.
OTLP_ALLOWLIST=10.0.0.0/8,192.168.0.0/16

# Registry
REGISTRY=ghcr.io/yourorgname
IMAGE_NAME=example-app
IMAGE_TAG=dev

# App observability
OTEL_EXPORTER_OTLP_ENDPOINT=https://${OTLP_DOMAIN}
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
OTEL_RESOURCE_ATTRIBUTES=service.name=example-app,deployment.environment=dev

# ClickHouse backup for object storage
S3_BUCKET=your-bucket
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY_ID=changeme
S3_SECRET_ACCESS_KEY=changeme